<%- include('header'); -%>

  <body>
    <%- include('navbar'); -%>
      <form action="/" method="post">
        <div class="container" style="padding: 15px;">
          <p class="h2">Profile</p>
          <p class="h3">Status : <%= status %>
              <br>

              

              <% if(status==="Non-Donor" ){ %>
                <p class="h4">Activate Your Donors Account</p>
                <div class="row">
                  
                  <div class="col">
                    <input type="text" name="name" class="form-control" placeholder="Enter Your Name"
                      aria-label="Enter Your Name" required>
                  </div>
                  <div class="col">
                    <input type="text" name="bloodGroup" class="form-control" placeholder="Blood Group"
                      aria-label="Blood Group" required>
                  </div>
                  <div class="col">
                    <input type="number" name="contact" class="form-control" placeholder="Contact Number"
                      aria-label="Contact Number" required>
                  </div>
                </div>
                
                <br>
                <div class="row">
                  <div class="col">
                    <input type="email" name="email" class="form-control" placeholder="Enter Your Email"
                      aria-label="Enter Your Email-ID" required>
                  </div>
                  <div class="col">
                    <input type="text" name="city" class="form-control" placeholder="City" aria-label="City" required>
                  </div>
                  <br>
                  <br>
                  <div>
                    <button type="submit" class="btn btn-success">Activate Your Donors Account</button>
                  </div>
                </div>

                <% } %>
        </div>
      </form>
      <br>
      <br>
      <br>
      <div class="container">
        <p class="h4">Deactivate Your Donors Account</p>
        <form action="/delete/<%= User._id %>>" method="post">
          <div class="row">
            <div class="col">
              <input type="email" name="emailConfirm" class="form-control" placeholder="Enter Your Email"
                value="<%= User.username %>" aria-label="Enter Your Email-ID" readonly>
            </div>
            <div class="col">
              <input type="text" name="id" value="<%= User._id %>" class="form-control" placeholder="Your ID"
                aria-label="Your ID" readonly>
            </div>
            <div class="col">
              <input type="number" name="contact" class="form-control" placeholder="Contact Number"
                aria-label="Contact Number" required>
            </div>
            <br>
            <br>
            <div>
              <button type="submit" class="btn btn-danger">Deactivate Your Donors Account</button>
            </div>
          </div>
          <!-- <button name="submit" >Deactivate</button>
    <label for="Confirm">Enter Your Email Id and Contact number to deactivate Your Account</label>
    <input type="email" name="emailConfirm" placeholder="Enter Your Email id"  autocomplete="off" readonly>
    <input type="email" name="id" placeholder="Your Id"  autocomplete="off" readonly>
    <input type="number" name="contact" placeholder="Enter Your Contact Number" autocomplete="off" > -->
        </form>
      </div>

      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
  </body>

  </html>